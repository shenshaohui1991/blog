a#slide {
    position: fixed;
    display: block;
    width: 40px;
    height: 40px;
    top: 10px;
    left: 10px;
    text-align: center;
    font: 22px/40px "icon";
    color: #fff;
    background: #262626;
    border-radius: 3px;
    z-index: 31;

    &:hover {
        background: #39c492;
    }

    &:after {
        content: "F";
    }

    &.slide:after {
        position: absolute;
        content: "X";
        top: 11px;
        left: 50%;
        width: 40px;
        height: 40px;
        margin: 0 0 0 -20px;
        font: 18px "icon" !important;
        vertical-align: middle;
    }
}

#sidebar {
    position: fixed;
    overflow-y: scroll;
    height: 100%;
    width: 298px;
    padding: 40px 30px 0;
    top: 0;
    left: -298px;
    background: #191918;
    z-index: 20;

    h2 {
        margin: 0 0 16px !important;
        font: 900 16px/1em "Lato",sans-serif;
        color: #fff;
    }

    hr {
        width: 100%;
        height: 1px;
        margin: 40px 0 39px;
        background: #242424;
        border: 0;
    }

    #navigation {
        hr {
            margin: 31px 0 38px;
        }

        li {
            margin: 0;
            list-style-type: none;

            a {
                padding: 0 0 18px;
                font: 700 16px/1em "Cambria";
                text-transform: uppercase;
                color: #b3b3b1;
            }

            a:hover {
                color: #fff;
            }
        }

        #slide-pages,
        #slide-filter {
            display: none;
            margin: 10px 0;
            padding: 0 0 0 18px;
            border-left: 3px solid #242424;
        }

        #slide-pages li,
        #slide-filter li {
            margin: 0 0 14px;

            a {
                display: block;
                padding: 0;
                font: 700 14px/1em "Lato";
            }
        }

        #slide-pages li:last-child,
        #slide-filter li:last-child {
            margin: 0;
        }
    }
}